{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "required": ["id", "name"],
    "type": "object",
    "properties": {
        "id": {
            "type": "number",
            "default": 100
        },
        "name": {
            "type": "string"
        },

        "purchases": {
            "$ref": "#/definitions/productList"
        },

        "shoppingCart": {
            "$ref": "#/definitions/productList"
        },

        "options": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/option"
            },
            "minItems": 3,
            "maxItems": 3
        }
    },
    "definitions": {
        "productList": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/product"
            }
        },

        "currency": {
            "type": "number"
        },

        "product": {
            "type": "object",
            "properties": {
                "cost": {
                    "$ref": "#/definitions/currency"
                },
                "name": {
                    "type": "string"
                }
            }
        },

        "option": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "number"
                }
            }
        }
    }
}